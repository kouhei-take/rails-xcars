<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
        <div class="col-xs-12 col-sm-4">
          
            <div class="card-body">
              <% if car.photo %>
                <div class="card text-center" style="height: 300px; width: 300px; background-image: url('<%= cl_image_path  car.photo, height: 300, width: 300, crop: :pad %>')"></div>
              <% else %>
                <div class="card text-center" style="background-image: url('https://s-media-cache-ak0.pinimg.com/736x/b0/60/7a/b0607ac790b5460db4566fce20caf802.jpg')">
                </div>
              <% end %>
              <% car_description = "#{car.year} #{car.make} #{car.model}" %>
             <div class="card-footer"><% car.price %>
               <ul class="list-inline">
                 <li><%= car_description %></li>
                 <li><% car.price %></li>
               </ul>
             </div>
          </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
