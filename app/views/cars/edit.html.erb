<div class="container">

  <h2><%= link_to "Back to Your Listings", users_cars_path,  {class: "btn btn-primary"} %></h2>

  <div class="jumbutron">
  <h1 class="text-center">Edit your Xcar</h1>
  </div>

  <div class="contact-form">
    <%= simple_form_for @car do |f| %>
    <%= f.input :name %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :year %>
    <%= f.input :color %>
    <%= f.input :seats %>
    <%= f.input :location %>
    <%= f.input :transmission %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="form-actions text-right">
    <%= f.button :submit, "Change it!", {class:"btn-success"} %>
    </div>
    <% end %>
  </div>
</div>
