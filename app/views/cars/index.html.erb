<!-- AVAILABLE CARS LIST-->
<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-xs-12 col-sm-4 card-container">
        <!-- insert <div class="card"> -->
        <% if car.photo.url %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= car.photo.url %>');">
        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://s-media-cache-ak0.pinimg.com/736x/b0/60/7a/b0607ac790b5460db4566fce20caf802.jpg');">
        <% end %>

        <% car_description = "#{car.year} #{car.make} #{car.model}" %>
        <% @currency = "â‚¬" %>
        <% price = "#{@currency}#{car.price.to_i}" %>
        <% if user_signed_in? %>
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
        <% end %>
          <div class="card-category"><%= price %></div>
          <div class="card-description">
            <h2><%= car.name  %></h2>
            <p><%= car_description %></p>
          </div>
          <img class="card-user avatar" src="<% avatar_url %>">
          <%= link_to "",  car_path(car) , class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

