<div class="navbar-wagon">
  <!-- LEFT NAVIGATION  -->
  <div class="left-side-container">

    <a href="/" class="navbar-wagon-brand">
      <%= image_tag "xcarrental2.jpg" %>
    </a>

    <div class="navbar-wagon-left hidden-xs hidden-sm">
      <!-- BOOTSTRAP FORM -->
      <form action="/" class="form-inline navbar-wagon-search">
        <div class="form-group navbar-wagon-search">
          <!-- <label for="Start Date">Search by Availability</label> -->
          <input type="text" class="form-control navbar-wagon-search-input datepicker" name="start_date" id="start_date" placeholder="Start Date">
        </div>
        <div class="form-group navbar-wagon-search">
          <!-- <label for="End Date"></label> -->
          <input type="text" class="form-control navbar-wagon-search-input datepicker" name="end_date" id="end_date" placeholder="End Date">
        </div>
        <div class="form-group navbar-wagon-search">
          <!-- <label for="End Date"></label> -->
          <input type="text" class="form-control navbar-wagon-search-input" name="search_text" id="search_text" placeholder="Area, Model, Maker">
        </div>
          <button type="submit" class="btn btn-warning btn-bordered btn-bordered-primary">Search by Availability</button>
      </form>
      </form>
    </div>
  </div>

  <!-- RIGHT NAVIGATION -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Text link -->
    <% if user_signed_in? %>
    <%= link_to "Manage Booking", bookings_index_path, { class: "navbar-wagon-item navbar-wagon-link" } %>
    <% end %>

    <!-- Text link -->
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-link">Manage Listings</a> -->
    <% if user_signed_in? %>
    <%= link_to "Manage Your Car", users_cars_path, { class: "navbar-wagon-item navbar-wagon-link" } %>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

        <% if user_signed_in? %>
        <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/50x50" %>
        <%= image_tag avatar_url, class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <!-- Login text link -->
      <% else %>
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
        <!-- <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"> -->
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <!--          <li><a href="#">Profile</a></li> -->
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li>
            <a href="#">Log Out</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-button btn">Post stuff</a> -->
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <a href="#">Some mobile link</a>
        </li>
        <li>
          <a href="#">Other one</a>
        </li>
        <li>
